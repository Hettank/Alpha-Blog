<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Login</h5>
    </div>
    <div class="card-body">
      <%= form_with(scope: :session, url: login_path, local: true) do |f| %>        
        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-bold" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
          <div class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-bold" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit 'Login', class: "btn btn-primary px-4" %>
          <%= link_to 'Back', root_path, class: "btn btn-outline-secondary px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
