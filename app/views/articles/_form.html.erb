<% if @article.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading">Prohibited this article from being saved:</h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Create/Edit Article</h5>
    </div>
    <div class="card-body">
      <%= form_with(model: @article, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label fw-bold" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter the title" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :description, class: "form-label fw-bold" %>
          <%= f.text_area :description, class: "form-control", rows: 5, placeholder: "Enter the description" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Save Article", class: "btn btn-primary px-4" %>
          <%= link_to 'Back', articles_path, class: "btn btn-outline-secondary px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
