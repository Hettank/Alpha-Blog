<div class="container mt-5">
  <%= render "shared/errors", obj: @user %>
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0"><%= @page_title %></h5>
    </div>
    <div class="card-body">
      <%= form_with(model: @user, local: true) do |f| %>
        
        <div class="mb-3">
          <%= f.label :username, class: "form-label fw-bold" %>
          <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
          <div class="form-text">Choose a unique username.</div>
        </div>
        
        <div class="mb-3">
          <%= f.label :email, class: "form-label fw-bold" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
          <div class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label fw-bold" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit @btn_name, class: "btn btn-primary px-4" %>
          <%= link_to 'Back', root_path, class: "btn btn-outline-secondary px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
